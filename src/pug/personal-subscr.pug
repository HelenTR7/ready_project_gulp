extends layout/layout

block vars
    - var pageTitle = 'Подписки'
    - var pageBodyClass = ''
    - var pageHeaderClass = ''

block content
    +b.personal.container
        .row
            +e.__aside.col-lg-3
                include components/aside
            +e.__main.col-lg-9
                +b.pageheader
                    +e('h1').__title.h2 Подписки
                +e('form').__form
                    .fieldgroup
                        label.checkbox-item
                            input(type="checkbox" name="subscr" checked)
                            span.label Все новости
                        label.checkbox-item
                            input(type="checkbox" name="subscr")
                            span.label Акции и спец. предложения
                        label.checkbox-item
                            input(type="checkbox" name="subscr")
                            span.label Новинки товаров
                    .fieldgroup.fieldgroup--modal
                            label.label E-mail *
                            input.input(type="email" placeholder="E-mail" value="alexandra@gmail.com" required)
                    .fieldgroup.fieldgroup--modal
                            button.btn.btn--primary Сохранить
