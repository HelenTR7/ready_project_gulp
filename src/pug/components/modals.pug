//-#modal-auth
.modal.fade.modal--auth(
    id="modal-auth"
    tabindex="-1"
    role="dialog"
    aria-labelledby="modal-auth"
    aria-hidden="true")
    .modal-dialog(role="document")
        .modal-content
            .modal-header
                .modal-status.modal-status--error
                    +icon('i-warning')
                    span.text Произошла ошибка. Заполните форму еще раз
                .modal-title Авторизация
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                    +icon('i-delete')
            form(action="").modal-body
                .fieldgroup.fieldgroup--modal
                    label.label E-mail *
                    input.input(type="email" placeholder="Введите e-mail" required)
                .fieldgroup.fieldgroup--modal.fieldgroup--mb-sm
                    label.label Пароль *
                    input.input(type="text" placeholder="Введите пароль" required)
                .fieldgroup.fieldgroup--remember
                    label.checkbox-item
                        input(type="checkbox" name="success" checked)
                        span.label Запомнить меня
                    a(
                        href="javascript:;"
                        data-target="#modal-forget"
                        data-toggle="modal"
                        data-dismiss="modal"
                    ) Забыли пароль?
                .fieldgroup
                    button.btn.btn--primary.btn--full Войти
                    a.btn.btn--bordered.btn--full(
                        href="javascript:;"
                        data-target="#modal-register"
                        data-toggle="modal"
                        data-dismiss="modal"
                    ) Зарегистрироваться

